rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Selfies can only be uploaded by the user themselves
    match /selfies/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null 
        && request.auth.uid == userId
        && exists(/databases/(default)/documents/users/$(request.auth.uid))
        && get(/databases/(default)/documents/users/$(request.auth.uid)).data.isActive == true;
      
      // Allow admins to read selfies for attendance verification
      allow read: if request.auth != null 
        && exists(/databases/(default)/documents/users/$(request.auth.uid))
        && get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin'
        && get(/databases/(default)/documents/users/$(request.auth.uid)).data.isActive == true;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}